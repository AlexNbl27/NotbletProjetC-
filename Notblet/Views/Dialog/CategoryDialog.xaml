<Window x:Class="Notblet.Views.CategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter une catégorie" 
        Width="300" 
        Height="200" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Background="#e3f2fd">
        <StackPanel Margin="20">
            <TextBlock Text="Nom de la catégorie :" FontSize="14" Margin="0,0,0,10"/>
            <TextBox Name="CategoryNameTextBox" Height="30" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Annuler" Width="80" Margin="0,0,10,0" Click="Cancel_Click"
                        Background="#c62828" Foreground="White" />
                <Button Content="Valider" Width="80" Click="Add_Click" 
                        Background="#1e88e5" Foreground="White" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
